---
import Layout from '@/layouts/Layout.astro'
import { HackCard } from '@/components/hack-card'
import { AppCard } from '@/components/app-card'
import { ContributeCard } from '@/components/contribute-card'
import { Button } from '@/components/ui/button'
import { OutlinedButton } from '@/components/outlined-button'
import { Zap, BookOpen, Grid3x3 } from 'lucide-react'
import { getCollection } from 'astro:content'

// Fetch all hacks from the content collection
const allHacks = await getCollection('hacks')

// Filter and sort featured hacks
const hacksWithFeature = allHacks.filter(hack => 
  typeof hack.data.featured === 'number' && hack.data.featured >= 1 && hack.data.featured <= 3
)

// Validate: check for duplicate featured positions
const featuredPositions = hacksWithFeature.map(h => h.data.featured as number)
const duplicates = featuredPositions.filter((pos, index) => 
  featuredPositions.indexOf(pos) !== index
)

if (duplicates.length > 0) {
  throw new Error(`Build Error: Duplicate featured positions found: ${duplicates.join(', ')}. Each hack must have a unique featured position (1, 2, or 3).`)
}

// Sort by featured position and take exactly 3
const featuredHacks = hacksWithFeature
  .sort((a, b) => {
    const posA = a.data.featured as number
    const posB = b.data.featured as number
    return posA - posB
  })
  .slice(0, 3)

// Fetch all apps from the content collection
const allApps = await getCollection('apps')
const featuredApps = allApps // Show all apps
---

<Layout title="HackShelf - Badger 2350 Hacks & Projects">
  <!-- Hero Section -->
    <!-- Hero Section -->
  <section class="py-24 bg-background relative overflow-hidden">
    <div class="pointer-events-none absolute inset-0 opacity-[0.25] [background-image:radial-gradient(circle_at_center,#5FED83_1px,transparent_1px)] [background-size:24px_24px]"></div>
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="space-y-12">
          <div class="space-y-5">
            <h1 class="font-display text-6xl lg:text-7xl tracking-tight leading-[1.1]">
              Hack. Tinker. Repeat.
            </h1>
            <p class="font-mono text-base text-muted-foreground max-w-prose leading-relaxed">
              A stripped-down catalog of experiments for the Badger 2350. No marketing fluff. Just code, hardware pins, and ways to bend them.
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <Button asChild size="lg" client:load>
              <a href="#preloaded-apps" class="inline-flex items-center gap-2.5 px-5 py-3 font-mono text-base uppercase tracking-[0.12em]">
                <Grid3x3 className="h-5 w-5" />
                <span>Apps</span>
              </a>
            </Button>
            <Button asChild variant="outline" size="lg" client:load>
              <a href="/about-badge" class="inline-flex items-center gap-2.5 px-5 py-3 font-mono text-base uppercase tracking-[0.12em]">
                <Zap className="h-5 w-5" />
                <span>Hardware Map</span>
              </a>
            </Button>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-8 pt-8 border-t border-border/30">
            <div class="text-center">
              <div class="font-mono text-4xl font-semibold text-primary mb-2">{featuredApps.length}</div>
              <div class="font-mono text-xs uppercase tracking-wider text-muted-foreground">apps</div>
            </div>
            <div class="text-center">
              <div class="font-mono text-4xl font-semibold text-primary mb-2">{featuredHacks.length}+</div>
              <div class="font-mono text-xs uppercase tracking-wider text-muted-foreground">hacks</div>
            </div>
            <div class="text-center">
              <div class="font-mono text-4xl font-semibold text-primary mb-2">âˆž</div>
              <div class="font-mono text-xs uppercase tracking-wider text-muted-foreground">ideas</div>
            </div>
          </div>
        </div>

        <!-- Badge Image -->
        <div class="order-first lg:order-last">
          <div class="relative mx-auto max-w-sm">
            <div class="aspect-square rounded-lg border border-border/50 bg-secondary/10 overflow-hidden shadow-[0_0_35px_rgba(255,255,255,0.25)]">
              <img 
                src="/images/hero.jpg" 
                alt="Badger 2350 Hardware Badge" 
                class="w-full h-full object-cover"
              />
            </div>
            <div class="absolute -inset-10 -z-10 opacity-40 blur-2xl bg-gradient-to-r from-white/25 via-white/12 to-transparent"></div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Preloaded Apps Section -->
  <section id="preloaded-apps" class="py-24 bg-background">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          Preloaded Apps
        </h2>
        <p class="text-xl text-muted-foreground">
          Your Badger 2350 comes with these apps ready to use. Explore, customize, and make them your own.
        </p>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {featuredApps.map((app) => (
            <AppCard 
              key={app.slug}
              title={app.data.title}
              description={app.data.description}
              icon={app.data.icon}
              category={app.data.category}
              preloaded={app.data.preloaded}
              customizable={app.data.customizable}
              slug={app.slug}
              client:load
            />
          ))}
        </div>
      </div>

      <div class="mt-12 flex justify-center">
        <OutlinedButton href="/apps" client:load>
          <Grid3x3 className="h-5 w-5" />
          <span>All Apps</span>
        </OutlinedButton>
      </div>
    </div>
  </section>

  <!-- Hacks Catalog Section -->
  <section id="hacks" class="py-24 bg-muted/50">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          Customize Your Badger
        </h2>
        <p class="text-xl text-muted-foreground">
          Step-by-step tutorials to modify hardware behavior, wire custom features, and build your own apps. Each hack includes executable instructions and source code.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredHacks.map((hack) => (
          <HackCard 
            title={hack.data.title}
            description={hack.data.description}
            difficulty={hack.data.difficulty}
            duration={hack.data.duration}
            thumbnail={hack.data.thumbnail}
            slug={hack.slug}
            client:load
          />
        ))}
      </div>

      <div class="mt-12 flex justify-center">
        <OutlinedButton href="/hacks" client:load>
          <BookOpen className="h-5 w-5" />
          <span>All Hacks</span>
        </OutlinedButton>
      </div>
    </div>
  </section>
</Layout>
