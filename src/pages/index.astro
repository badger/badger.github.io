---
import Layout from '@/layouts/Layout.astro'
import { HackCard } from '@/components/hack-card'
import { AppCard } from '@/components/app-card'
import { ContributeCard } from '@/components/contribute-card'
import { Button } from '@/components/ui/button'
import { ArrowRight, Zap, Users, BookOpen, Grid3x3 } from 'lucide-react'
import { getCollection } from 'astro:content'

// Fetch all hacks from the content collection
const allHacks = await getCollection('hacks')
const featuredHacks = allHacks.slice(0, 4) // Show first 4 hacks

// Fetch all apps from the content collection
const allApps = await getCollection('apps')
const featuredApps = allApps // Show all apps
---

<Layout title="HackShelf - Badger 2350 Hacks & Projects">
  <!-- Hero Section -->
    <!-- Hero Section -->
  <section class="py-24 bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-blue-950/20 dark:via-background dark:to-purple-950/20">
    <div class="container">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <!-- Content -->
        <div class="space-y-8">
          <div class="space-y-4">
            <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold tracking-tight">
              Unlock Your 
              <span class="bg-gradient-to-r from-blue-600 to-purple-600 bg-clip-text text-transparent">
                Badger 2350
              </span>
            </h1>
            <p class="text-xl text-muted-foreground">
              Discover amazing hacks, tutorials, and projects for your Badger 2350. 
              From LED patterns to IoT sensors - build something extraordinary today.
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <Button asChild size="lg" class="text-lg px-8" client:load>
              <a href="#preloaded-apps" class="flex items-center gap-2">
                <Grid3x3 class="h-5 w-5" />
                View Apps
                <ArrowRight class="h-4 w-4" />
              </a>
            </Button>
            <Button asChild variant="outline" size="lg" class="text-lg px-8" client:load>
              <a href="/about-badge" class="flex items-center gap-2">
                <Zap class="h-5 w-5" />
                Learn About Your Badge
              </a>
            </Button>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-6 mt-12 pt-6 border-t border-border/50">
            <div class="text-center">
              <div class="text-2xl font-bold text-foreground">{featuredApps.length}</div>
              <div class="text-xs text-muted-foreground">Preloaded Apps</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-foreground">{featuredHacks.length}+</div>
              <div class="text-xs text-muted-foreground">Hacks</div>
            </div>
            <div class="text-center">
              <div class="text-2xl font-bold text-foreground">∞</div>
              <div class="text-xs text-muted-foreground">Ideas</div>
            </div>
          </div>
        </div>

        <!-- Badge Image -->
        <div class="order-first lg:order-last">
          <div class="relative">
            <div class="aspect-square max-w-md mx-auto rounded-2xl overflow-hidden shadow-2xl">
              <img 
                src="/images/hero.jpg" 
                alt="Badger 2350" 
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Preloaded Apps Section -->
  <section id="preloaded-apps" class="py-24 bg-background">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          Preloaded Apps
        </h2>
        <p class="text-xl text-muted-foreground">
          Your Badger 2350 comes with these apps ready to use. Explore, customize, and make them your own.
        </p>
      </div>

      <div class="max-w-6xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
          {featuredApps.map((app) => (
            <AppCard 
              key={app.slug}
              title={app.data.title}
              description={app.data.description}
              icon={app.data.icon}
              category={app.data.category}
              preloaded={app.data.preloaded}
              customizable={app.data.customizable}
              slug={app.slug}
              client:load
            />
          ))}
        </div>
      </div>

      <div class="mt-12 text-center">
        <Button asChild size="lg" variant="outline" client:load>
          <a href="/apps" class="flex items-center gap-2">
            <Grid3x3 class="h-5 w-5" />
            View All Apps
            <ArrowRight class="h-4 w-4" />
          </a>
        </Button>
      </div>
    </div>
  </section>

  <!-- Hacks Catalog Section -->
  <section id="hacks" class="py-24 bg-muted/50">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          Community Hacks & Tutorials
        </h2>
        <p class="text-xl text-muted-foreground">
          Get inspired by community projects. Learn to build new features and customize your badge.
          Each hack includes step-by-step instructions and all the code you need.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {featuredHacks.map((hack) => (
          <HackCard 
            key={hack.slug}
            title={hack.data.title}
            description={hack.data.description}
            difficulty={hack.data.difficulty}
            duration={hack.data.duration}
            tags={hack.data.tags}
            thumbnail={hack.data.thumbnail}
            slug={hack.slug}
            client:load
          />
        ))}
        
        <!-- Contribute Card -->
        <ContributeCard client:load />
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section class="py-24 bg-muted/50">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          Why HackShelf?
        </h2>
        <p class="text-xl text-muted-foreground">
          Everything you need to unlock the full potential of your Badger 2350.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center space-y-4">
          <div class="mx-auto h-12 w-12 rounded-lg bg-blue-100 dark:bg-blue-900/20 flex items-center justify-center">
            <BookOpen class="h-6 w-6 text-blue-600 dark:text-blue-400" />
          </div>
          <h3 class="text-xl font-semibold">Step-by-Step Tutorials</h3>
          <p class="text-muted-foreground">
            Each hack comes with detailed instructions, code snippets, and helpful tips to guide you through the process.
          </p>
        </div>

        <div class="text-center space-y-4">
          <div class="mx-auto h-12 w-12 rounded-lg bg-green-100 dark:bg-green-900/20 flex items-center justify-center">
            <Zap class="h-6 w-6 text-green-600 dark:text-green-400" />
          </div>
          <h3 class="text-xl font-semibold">Ready-to-Use Code</h3>
          <p class="text-muted-foreground">
            Copy and paste working code examples. All projects are tested and verified to work with the Badger 2350.
          </p>
        </div>

        <div class="text-center space-y-4">
          <div class="mx-auto h-12 w-12 rounded-lg bg-purple-100 dark:bg-purple-900/20 flex items-center justify-center">
            <Users class="h-6 w-6 text-purple-600 dark:text-purple-400" />
          </div>
          <h3 class="text-xl font-semibold">Community Driven</h3>
          <p class="text-muted-foreground">
            Built by the community, for the community. Contribute your own hacks and help others learn.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer class="bg-background border-t">
    <div class="container py-12">
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8">
        <div class="space-y-4">
          <h3 class="text-lg font-semibold">HackShelf</h3>
          <p class="text-sm text-muted-foreground">
            A community-driven catalog of hacks and projects for the Badger 2350.
          </p>
        </div>
        
        <div class="space-y-4">
          <h4 class="font-semibold">Learn</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/apps" class="text-muted-foreground hover:text-foreground">Preloaded Apps</a></li>
            <li><a href="/" class="text-muted-foreground hover:text-foreground">Browse Hacks</a></li>
            <li><a href="/about-badge" class="text-muted-foreground hover:text-foreground">About Badger 2350</a></li>
            <li><a href="/contribute" class="text-muted-foreground hover:text-foreground">Get Started</a></li>
          </ul>
        </div>
        
        <div class="space-y-4">
          <h4 class="font-semibold">Community</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="/contribute" class="text-muted-foreground hover:text-foreground">Contribute</a></li>
            <li><a href="https://github.com/badger/hackshelf" class="text-muted-foreground hover:text-foreground">GitHub</a></li>
            <li><a href="https://github.com/badger/hackshelf/discussions" class="text-muted-foreground hover:text-foreground">Discussions</a></li>
          </ul>
        </div>
        
        <div class="space-y-4">
          <h4 class="font-semibold">Resources</h4>
          <ul class="space-y-2 text-sm">
            <li><a href="#" class="text-muted-foreground hover:text-foreground">Documentation</a></li>
            <li><a href="#" class="text-muted-foreground hover:text-foreground">API Reference</a></li>
            <li><a href="#" class="text-muted-foreground hover:text-foreground">Hardware Guide</a></li>
          </ul>
        </div>
      </div>
      
      <div class="mt-8 pt-8 border-t flex flex-col sm:flex-row justify-between items-center">
        <p class="text-sm text-muted-foreground">
          © 2025 HackShelf. Built with ❤️ for the Badger 2350 community.
        </p>
        <div class="flex items-center space-x-4 mt-4 sm:mt-0">
          <a href="https://github.com/badger/hackshelf" class="text-muted-foreground hover:text-foreground">
            <span class="sr-only">GitHub</span>
            <svg class="h-5 w-5" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 0C4.477 0 0 4.484 0 10.017c0 4.425 2.865 8.18 6.839 9.504.5.092.682-.217.682-.483 0-.237-.008-.868-.013-1.703-2.782.605-3.369-1.343-3.369-1.343-.454-1.158-1.11-1.466-1.11-1.466-.908-.62.069-.608.069-.608 1.003.07 1.531 1.032 1.531 1.032.892 1.53 2.341 1.088 2.91.832.092-.647.35-1.088.636-1.338-2.22-.253-4.555-1.113-4.555-4.951 0-1.093.39-1.988 1.029-2.688-.103-.253-.446-1.272.098-2.65 0 0 .84-.27 2.75 1.026A9.564 9.564 0 0110 4.844c.85.004 1.705.115 2.504.337 1.909-1.296 2.747-1.027 2.747-1.027.546 1.379.203 2.398.1 2.651.64.7 1.028 1.595 1.028 2.688 0 3.848-2.339 4.695-4.566 4.942.359.31.678.921.678 1.856 0 1.338-.012 2.419-.012 2.747 0 .268.18.58.688.482A10.019 10.019 0 0020 10.017C20 4.484 15.522 0 10 0z" clip-rule="evenodd" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </footer>
</Layout>
