---
import Layout from '@/layouts/Layout.astro'
import { DifficultyBadge } from '@/components/difficulty-badge'
import { OutlinedButton } from '@/components/outlined-button'
import DottedSeparator from '@/components/DottedSeparator.astro'
import { formatDuration } from '@/lib/utils'
import { getCollection } from 'astro:content'
import { 
  Clock, 
  Github
} from 'lucide-react'

export async function getStaticPaths() {
  const hacks = await getCollection('hacks')
  return hacks.map((hack) => ({
    params: { slug: hack.slug },
    props: { hack },
  }))
}

const { hack } = Astro.props
const { Content } = await hack.render()
---

<Layout title={`${hack.data.title} - Badger`} description={hack.data.description}>
  <!-- Hero Section -->
  <section class="py-12 bg-gradient-to-br from-blue-50 via-white to-purple-50 dark:from-blue-950/20 dark:via-background dark:to-purple-950/20">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <!-- Content -->
        <div class="space-y-6 text-white">
          <div class="space-y-4">
            <div class="flex items-center gap-3 text-white">
              <DifficultyBadge 
                difficulty={hack.data.difficulty}
                className="text-sm"
                client:load
              />
              <div class="flex items-center gap-2 text-white">
                <Clock className="h-4 w-4" />
                <span class="font-mono tracking-wide uppercase text-xs">{formatDuration(hack.data.duration)}</span>
              </div>
            </div>
            
            <h1 class="text-4xl lg:text-5xl font-bold tracking-tight">
              {hack.data.title}
            </h1>
            
            <p class="text-xl leading-relaxed">
              {hack.data.description}
            </p>
          </div>

          <div class="flex flex-col sm:flex-row gap-4">
            <OutlinedButton href={hack.data.github || '#'} client:load>
              <Github className="h-5 w-5" />
              <span>View Code</span>
            </OutlinedButton>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Separator -->
  <DottedSeparator />

  <!-- Tutorial Content -->
  <section class="py-12">
    <div class="container">
      <div class="max-w-4xl mx-auto">
        <article class="prose prose-lg max-w-none prose--white">
          <Content />
        </article>
      </div>
    </div>
  </section>

  <!-- Separator -->
  <DottedSeparator />
</Layout>