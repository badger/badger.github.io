---
import Layout from '@/layouts/Layout.astro'
import { BadgeDiagram } from '@/components/badge-diagram'
import { Card, CardContent, CardDescription, CardHeader, CardTitle } from '@/components/ui/card'
import { Badge } from '@/components/ui/badge'
import { Button } from '@/components/ui/button'
import { 
  Cpu, 
  Wifi, 
  Bluetooth, 
  Battery, 
  Zap, 
  Monitor,
  Usb,
  ArrowRight
} from 'lucide-react'
---

<Layout title="About the Badger 2350 - Badger" description="Learn everything about the Badger 2350 device, its features, capabilities, and what makes it perfect for hacking and experimentation.">
  <!-- Hero Section -->
  <section class="py-20 bg-background relative overflow-hidden">
    <div class="absolute inset-0 opacity-25 [background-image:radial-gradient(circle_at_center,#5FED83_1px,transparent_1px)] [background-size:22px_22px]"></div>
    <div class="container relative">
      <div class="max-w-4xl mx-auto text-center space-y-8">
        <h1 class="font-display text-5xl lg:text-6xl tracking-tight leading-tight">
          <span class="font-mono text-xs text-primary/70 block mb-3">// BADGER 2350 HARDWARE MAP</span>
          System Breakdown
        </h1>
        <p class="font-mono text-sm text-muted-foreground max-w-2xl mx-auto">
          Hardware reference for rapid hacking: buttons, I/O, display, power, expansion. No fluff—just the parts and what they do.
        </p>
      </div>
    </div>
  </section>

  <!-- Interactive Diagram Section -->
  <section class="py-24 bg-background">
    <div class="container">
      <div class="max-w-6xl mx-auto">
        <div class="text-center mb-16">
          <h2 class="text-3xl lg:text-4xl font-bold mb-4">
            Badge Schematics
          </h2>
          <p class="text-xl text-muted-foreground">
            Explore the front and back of your Badger 2350. Click on the images to view in full size.
          </p>
        </div>

        <!-- Side by Side Images -->
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 mb-12">
          <!-- Front Badge Schematic -->
          <div>
            <h3 class="text-xl font-semibold mb-4 text-center">Front View</h3>
            <a 
              href="/images/badge-front.png" 
              target="_blank"
              class="block bg-card rounded-xl p-6 shadow-lg hover:shadow-xl transition-all group cursor-pointer"
            >
              <img 
                src="/images/badge-front.png" 
                alt="Badger 2350 Front Schematic" 
                class="w-full h-auto rounded-lg group-hover:scale-105 transition-transform"
              />
              <p class="text-center text-sm text-muted-foreground mt-3 group-hover:text-primary transition-colors">
                Click to view full size →
              </p>
            </a>
          </div>

          <!-- Back Badge Schematic -->
          <div>
            <h3 class="text-xl font-semibold mb-4 text-center">Back View</h3>
            <a 
              href="/images/badge-back.png" 
              target="_blank"
              class="block bg-card rounded-xl p-6 shadow-lg hover:shadow-xl transition-all group cursor-pointer"
            >
              <img 
                src="/images/badge-back.png" 
                alt="Badger 2350 Back Schematic" 
                class="w-full h-auto rounded-lg group-hover:scale-105 transition-transform"
              />
              <p class="text-center text-sm text-muted-foreground mt-3 group-hover:text-primary transition-colors">
                Click to view full size →
              </p>
            </a>
          </div>
        </div>

        <!-- Component Details -->
        <div class="space-y-8">
          <h3 class="text-2xl font-semibold text-center mb-6">Component Details</h3>
          
          <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
            <!-- Front Components -->
            <div class="space-y-4">
              <h4 class="font-semibold text-lg text-primary">Front Components</h4>
              
              <Card>
                <CardHeader>
                  <CardTitle>Display</CardTitle>
                </CardHeader>
                <CardContent class="space-y-2">
                  <div>
                    <h5 class="font-semibold text-sm mb-1">Full-Color TFT Display</h5>
                    <p class="text-sm text-muted-foreground">Vibrant full-color screen displaying the GitHub Octocat and your custom apps</p>
                  </div>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle>Control Buttons</CardTitle>
                </CardHeader>
                <CardContent class="space-y-3">
                  <div>
                    <h5 class="font-semibold text-sm mb-1">Bottom Buttons (A, B, C)</h5>
                    <p class="text-sm text-muted-foreground">Three primary tactile buttons for app interaction and menu selection</p>
                  </div>
                  <div>
                    <h5 class="font-semibold text-sm mb-1">Side Navigation (UP △, DOWN ▽)</h5>
                    <p class="text-sm text-muted-foreground">Two directional buttons on the right edge for scrolling and navigation</p>
                  </div>
                  <div>
                    <h5 class="font-semibold text-sm mb-1">Status LEDs</h5>
                    <p class="text-sm text-muted-foreground">Five indicator LEDs on the left side for visual feedback</p>
                  </div>
                </CardContent>
              </Card>
            </div>

            <!-- Back Components -->
            <div class="space-y-4">
              <h4 class="font-semibold text-lg text-primary">Back Components</h4>
              
              <Card>
                <CardHeader>
                  <CardTitle>Power & Connectivity</CardTitle>
                </CardHeader>
                <CardContent class="space-y-2">
                  <div>
                    <h5 class="font-semibold text-sm mb-1">USB-C Port</h5>
                    <p class="text-sm text-muted-foreground">For power, charging, and programming</p>
                  </div>
                  <div>
                    <h5 class="font-semibold text-sm mb-1">Battery Connector</h5>
                    <p class="text-sm text-muted-foreground">JST connector for Li-Po battery power</p>
                  </div>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle>Expansion & GPIO</CardTitle>
                </CardHeader>
                <CardContent class="space-y-2">
                  <div>
                    <h5 class="font-semibold text-sm mb-1">QWIIC Connector</h5>
                    <p class="text-sm text-muted-foreground">I2C connector (purple) for easy sensor and module attachment</p>
                  </div>
                  <div>
                    <h5 class="font-semibold text-sm mb-1">GPIO Pins</h5>
                    <p class="text-sm text-muted-foreground">6 pins: 3V, GP6, GP7, GP10, GP11, GND for hardware expansion</p>
                  </div>
                </CardContent>
              </Card>

              <Card>
                <CardHeader>
                  <CardTitle>Processor & Info</CardTitle>
                </CardHeader>
                <CardContent class="space-y-2">
                  <div>
                    <h5 class="font-semibold text-sm mb-1">RP2350B Chip</h5>
                    <p class="text-sm text-muted-foreground">Dual-core ARM processor visible on the PCB</p>
                  </div>
                  <div>
                    <h5 class="font-semibold text-sm mb-1">QR Code</h5>
                    <p class="text-sm text-muted-foreground">Links to gh.io/badger for documentation</p>
                  </div>
                  <div>
                    <h5 class="font-semibold text-sm mb-1">Made by Pimoroni</h5>
                    <p class="text-sm text-muted-foreground">Crafted in Sheffield, UK • Sponsored by ARM</p>
                  </div>
                </CardContent>
              </Card>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Grid -->
  <section class="py-24 bg-muted/50">
    <div class="container">
      <div class="max-w-2xl mx-auto text-center mb-16">
        <h2 class="text-3xl lg:text-4xl font-bold mb-4">
          Key Features & Specifications
        </h2>
        <p class="text-xl text-muted-foreground">
          Everything you need to know about your Badger 2350's capabilities.
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        <!-- Processor -->
        <Card class="hover:shadow-lg transition-shadow">
          <CardHeader>
            <div class="flex items-center space-x-3">
              <div class="p-2 rounded-lg bg-blue-100 dark:bg-blue-900/20">
                <Cpu class="h-6 w-6 text-blue-600 dark:text-blue-400" />
              </div>
              <div>
                <CardTitle class="text-lg">RP2350B Processor</CardTitle>
                <CardDescription>Dual-core ARM Cortex-M33</CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              150MHz dual-core ARM Cortex-M33 processor with 520KB RAM and 4MB flash storage. 
              Perfect for running complex programs and real-time applications.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <Badge variant="secondary">150MHz</Badge>
              <Badge variant="secondary">520KB RAM</Badge>
              <Badge variant="secondary">4MB Flash</Badge>
            </div>
          </CardContent>
        </Card>

        <!-- Display -->
        <Card class="hover:shadow-lg transition-shadow">
          <CardHeader>
            <div class="flex items-center space-x-3">
              <div class="p-2 rounded-lg bg-green-100 dark:bg-green-900/20">
                <Monitor class="h-6 w-6 text-green-600 dark:text-green-400" />
              </div>
              <div>
                <CardTitle class="text-lg">Full-Color TFT Display</CardTitle>
                <CardDescription>Vivid color screen</CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Vibrant full-color TFT display perfect for apps, graphics, games, and displaying 
              your GitHub profile with rich visuals.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <Badge variant="secondary">Full Color</Badge>
              <Badge variant="secondary">TFT LCD</Badge>
              <Badge variant="secondary">Vivid Graphics</Badge>
            </div>
          </CardContent>
        </Card>

        <!-- Connectivity -->
        <Card class="hover:shadow-lg transition-shadow">
          <CardHeader>
            <div class="flex items-center space-x-3">
              <div class="p-2 rounded-lg bg-purple-100 dark:bg-purple-900/20">
                <Wifi class="h-6 w-6 text-purple-600 dark:text-purple-400" />
              </div>
              <div>
                <CardTitle class="text-lg">Wireless</CardTitle>
                <CardDescription>WiFi & Bluetooth ready</CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Built-in WiFi and Bluetooth capabilities for IoT projects, 
              wireless communication, and internet connectivity.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <Badge variant="secondary">WiFi 4</Badge>
              <Badge variant="secondary">Bluetooth 5.0</Badge>
              <Badge variant="secondary">IoT Ready</Badge>
            </div>
          </CardContent>
        </Card>

        <!-- Power -->
        <Card class="hover:shadow-lg transition-shadow">
          <CardHeader>
            <div class="flex items-center space-x-3">
              <div class="p-2 rounded-lg bg-amber-100 dark:bg-amber-900/20">
                <Battery class="h-6 w-6 text-amber-600 dark:text-amber-400" />
              </div>
              <div>
                <CardTitle class="text-lg">Power Options</CardTitle>
                <CardDescription>Battery & USB powered</CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Flexible power options including USB-C charging, battery operation, 
              and ultra-low power modes for extended runtime.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <Badge variant="secondary">USB-C</Badge>
              <Badge variant="secondary">Li-Po Battery</Badge>
              <Badge variant="secondary">Low Power</Badge>
            </div>
          </CardContent>
        </Card>

        <!-- GPIO -->
        <Card class="hover:shadow-lg transition-shadow">
          <CardHeader>
            <div class="flex items-center space-x-3">
              <div class="p-2 rounded-lg bg-red-100 dark:bg-red-900/20">
                <Zap class="h-6 w-6 text-red-600 dark:text-red-400" />
              </div>
              <div>
                <CardTitle class="text-lg">GPIO Pins</CardTitle>
                <CardDescription>Expandable I/O</CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Multiple GPIO pins for connecting sensors, LEDs, motors, and other 
              electronic components. Perfect for hardware hacking.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <Badge variant="secondary">GPIO</Badge>
              <Badge variant="secondary">I2C</Badge>
              <Badge variant="secondary">SPI</Badge>
            </div>
          </CardContent>
        </Card>

        <!-- Programming -->
        <Card class="hover:shadow-lg transition-shadow">
          <CardHeader>
            <div class="flex items-center space-x-3">
              <div class="p-2 rounded-lg bg-indigo-100 dark:bg-indigo-900/20">
                <Usb class="h-6 w-6 text-indigo-600 dark:text-indigo-400" />
              </div>
              <div>
                <CardTitle class="text-lg">Programming</CardTitle>
                <CardDescription>Multiple languages supported</CardDescription>
              </div>
            </div>
          </CardHeader>
          <CardContent>
            <p class="text-sm text-muted-foreground">
              Program in Python, C++, or MicroPython. Easy USB programming 
              and debugging make development a breeze.
            </p>
            <div class="mt-3 flex flex-wrap gap-2">
              <Badge variant="secondary">Python</Badge>
              <Badge variant="secondary">C++</Badge>
              <Badge variant="secondary">MicroPython</Badge>
            </div>
          </CardContent>
        </Card>
      </div>
    </div>
  </section>

  <!-- Getting Started Section -->
  <section class="py-24 bg-background">
    <div class="container">
      <div class="max-w-4xl mx-auto text-center space-y-8">
        <h2 class="text-3xl lg:text-4xl font-bold">
          Ready to Start Hacking?
        </h2>
        <p class="text-xl text-muted-foreground">
          Reference complete—proceed to hacks for applied examples or submit a new experiment.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center">
          <Button asChild size="lg" className="text-lg px-8">
            <a href="/" class="flex items-center gap-2">
              Browse Hacks
              <ArrowRight className="h-5 w-5" />
            </a>
          </Button>
          <Button asChild variant="outline" size="lg" className="text-lg px-8">
            <a href="/contribute">
              Contribute a Hack
            </a>
          </Button>
        </div>
      </div>
    </div>
  </section>
</Layout>