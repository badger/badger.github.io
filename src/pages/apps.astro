---
import Layout from '@/layouts/Layout.astro'
import { AppCard } from '@/components/app-card'
import ListingHero from '@/components/listing-hero.astro'
import { Package, FileCode, Wrench, Info } from 'lucide-react'
import { getCollection } from 'astro:content'

// Fetch all apps from the content collection
const allApps = await getCollection('apps')

// Group apps by category
const appsByCategory = allApps.reduce((acc, app) => {
  const category = app.data.category
  if (!acc[category]) {
    acc[category] = []
  }
  acc[category].push(app)
  return acc
}, {} as Record<string, typeof allApps>)
